import java.util.Scanner;

/**
 * 
 */

/**
 * @author usuario
 *
 */
public class Principal {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner teclado=new Scanner(System.in);
		Empleados empleados[]=new Empleados[10];
		String nombre="";
		Integer saldo=0;
		String titulo="";
		String departamento="";
		for (int i = 0; i < 5; i++) {
			System.out.println("Nombre del empleado");
			nombre=teclado.next();
			System.out.println("Saldo del empleado");
			saldo=teclado.nextInt();
			empleados[i]=new Empleados(nombre, saldo);
		}
		for (int i = 5; i < 10; i++) {
			System.out.println("Nombre del jefe");
			nombre=teclado.next();
			System.out.println("Saldo del jefe");
			saldo=teclado.nextInt();
			System.out.println("Titulo del jefe");
			titulo=teclado.next();
			System.out.println("Departamento que controla");
			departamento=teclado.next();
			empleados[i]=new Jefes(nombre, saldo, titulo, departamento);
		}
		for (int i = 0; i < empleados.length; i++) {
			empleados[i].mostrardatos();
		}
	}

}
