	public static void baseDatos(Alumno [] alumno, Asignatura [] asignatura){
		for (int i = 0; i < 3; i++) {
			Fecha fechaNac=new Fecha((15+i),(5+i),(i+1999));
			alumno[i]=new Alumno("Alumno "+(i+1), fechaNac);
		}
		for (int i = 1; i < 4; i++) {
