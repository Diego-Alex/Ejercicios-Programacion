/**
 * @author usuario
 *
 */
public class Pruenas {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Nodo lista=null;
		Nodo aux=null;
		int contador=Leer.pedirEntero("Cuantos numeros deseas introducir?");
		while (contador<=0) {
			contador=Leer.pedirEntero("Minimo 1");
		}
		
		while (contador>0){
			int valor=Leer.pedirEntero("Introduce un numero");
			Nodo nodo=new Nodo(valor);
			aux=lista;
			if (lista==null) {
				lista=nodo;
			} else {
				while(aux.getsiguiente()!=null){
					aux=aux.getsiguiente();
				}
				aux.setsiguiente(nodo);
			}			
			contador--;
		}
		Leer.mensaje(lista.toString());
	}
//514331

	Nodo aux
}
